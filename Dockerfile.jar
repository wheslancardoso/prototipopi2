# Dockerfile otimizado para executar o JAR compilado
FROM openjdk:21-jre-slim

# Instalar dependências mínimas para JavaFX
RUN apt-get update && apt-get install -y \
    libgtk-3-0 \
    libx11-xcb1 \
    libxcomposite1 \
    libxcursor1 \
    libxdamage1 \
    libxi6 \
    libxtst6 \
    libnss3 \
    libcups2 \
    libxss1 \
    libxrandr2 \
    libasound2 \
    libpangocairo-1.0-0 \
    libatk1.0-0 \
    libcairo-gobject2 \
    libgdk-pixbuf2.0-0 \
    libxfixes3 \
    libxrender1 \
    && rm -rf /var/lib/apt/lists/*

# Definir diretório de trabalho
WORKDIR /app

# Copiar o JAR compilado
COPY target/*-jar-with-dependencies.jar app.jar

# Criar diretório para logs
RUN mkdir -p logs

# Expor porta (se necessário)
EXPOSE 8080

# Comando para executar a aplicação
CMD ["java", "-jar", "app.jar"] 