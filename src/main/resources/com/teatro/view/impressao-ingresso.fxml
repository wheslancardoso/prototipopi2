<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.teatro.view.controllers.ImpressaoIngressoController"
            stylesheets="@../css/impressao-ingresso.css">
   
   <!-- Barra Superior -->
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-bar">
         <padding>
            <Insets bottom="15.0" left="40.0" right="40.0" top="15.0" />
         </padding>
         
         <!-- Logo/Título -->
         <Label fx:id="impressao_lblLogo" text="Sistema de Teatro" styleClass="logo-title" />
         
         <!-- Botão Dashboard -->
         <Button fx:id="impressao_btnDashboard" text="Dashboard" onAction="#handleDashboard" styleClass="nav-button" />
         
         <!-- Spacer -->
         <Region HBox.hgrow="ALWAYS" />
         
         <!-- Informações do Usuário -->
         <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="user-info">
            <Label fx:id="impressao_lblUsuario" text="Usuário" styleClass="user-name" />
            <Button fx:id="impressao_btnSair" text="Sair" onAction="#handleSair" styleClass="logout-button" />
         </HBox>
      </HBox>
   </top>
   
   <!-- Conteúdo Principal -->
   <center>
      <ScrollPane fitToWidth="true" styleClass="main-scroll">
         <VBox spacing="30" styleClass="main-content">
            <padding>
               <Insets bottom="40.0" left="40.0" right="40.0" top="30.0" />
            </padding>
            
            <!-- Título da Página -->
            <VBox alignment="CENTER" spacing="10" styleClass="page-header">
               <Label fx:id="impressao_lblTitulo" text="Compra Realizada com Sucesso!" styleClass="page-title-success" />
               <Label fx:id="impressao_lblSubtitulo" text="Seus ingressos estão prontos para impressão." styleClass="page-subtitle" />
            </VBox>
            
            <!-- Container dos Ingressos -->
            <VBox fx:id="impressao_containerIngressos" spacing="20" styleClass="ingressos-container">
               <!-- Os ingressos serão adicionados dinamicamente -->
            </VBox>
            
            <!-- Mensagem quando não há ingressos -->
            <VBox fx:id="impressao_containerVazio" alignment="CENTER" spacing="20" 
                  styleClass="empty-container" visible="false" managed="false">
               <Label text="Nenhum ingresso encontrado" styleClass="empty-message" />
               <Label text="Você ainda não possui ingressos comprados." styleClass="empty-subtitle" />
               
               <Button fx:id="impressao_btnComprarNovo" text="Comprar Ingressos" 
                      onAction="#handleComprarNovo" styleClass="primary-button" />
            </VBox>
            
            <!-- Botões de Ação Global -->
            <HBox fx:id="impressao_containerBotoes" spacing="15" alignment="CENTER" 
                  styleClass="global-actions" visible="false" managed="false">
               
               <Button fx:id="impressao_btnImprimirTodos" text="Imprimir Todos" 
                      onAction="#handleImprimirTodos" styleClass="secondary-button" />
               
               <Button fx:id="impressao_btnNovaCompra" text="Comprar Mais Ingressos" 
                      onAction="#handleNovaCompra" styleClass="primary-button" />
               
            </HBox>
            
         </VBox>
      </ScrollPane>
   </center>
   
</BorderPane>